<form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <h2 class="mt-4">Create course</h2>
        <div class="form-group mt-2">
                <label class="form-group " for="name">Name</label>
                <input  type="text" class="form-control mt-2" id="name" name="name" 
                        placeholder="Enter name" value="{{course.name}}">
        </div>
        <div class="form-group mt-2">
                <label class="form-group " for="description">description</label>
                <input  type="text" class="form-control mt-2" id="description" name="description"
                        placeholder="Enter description" value="{{course.description}}">
        </div>

        <div class="form-group mt-2">
                <label class="form-group " for="videoId">Video ID</label>
                <input  type="text" class="form-control mt-2" id="videoId" name="videoId" 
                        placeholder="Enter video Id" value="{{course.videoId}}">
        </div>
        
        <button type="submit" class="btn btn-primary mt-4">Sửa khóa học</button>
</form>

